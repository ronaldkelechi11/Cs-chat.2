<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Browser">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:padding="5dp"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/browser_search"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/box_grey"
            android:fontFamily="@font/poppins"
            android:hint="Search..."
            android:imeOptions="actionGo"
            android:inputType="textUri"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="16sp"
            android:paddingTop="1dp"
            android:drawableStart="@drawable/google_img"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:selectAllOnFocus="true"
            />
    </androidx.cardview.widget.CardView>

<!--WebView Homepage is custom Page by We-Hub -->
    <WebView
        android:visibility="invisible"
        android:id="@+id/browserWebview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

<!--Home Page View-->
    <androidx.cardview.widget.CardView
        android:visibility="visible"
        android:id="@+id/browserHomeScreen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">
        <!--        First Row-->
        <TableRow
            android:id="@+id/tr1"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/myschoolgist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/myschoolgist"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My School Gist"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins"
                    android:layout_gravity="center"
                    />
            </LinearLayout>




            <LinearLayout
                android:id="@+id/waecdirect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/waec"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WAEC Direct"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins"
                    android:layout_gravity="center"
                    />
            </LinearLayout>




            <LinearLayout
                android:id="@+id/jumia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/jumia"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumia"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </TableRow>

    <!--Second Row-->
        <TableRow
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/manirecruits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/manir"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mani Recruits"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins"
                    android:layout_gravity="center"
                    />
            </LinearLayout>




            <LinearLayout
                android:id="@+id/coralexec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                >
                <androidx.cardview.widget.CardView
                    android:foreground="@drawable/coral"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coral Executive"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins"
                    android:layout_gravity="center"
                    />
            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CS Home"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </TableRow>
    </androidx.cardview.widget.CardView>


<!--ProgressBar by default is hidden by default-->
    <ProgressBar
        android:id="@+id/progressBarWebView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:indeterminateTint="@color/blue"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="@+id/browserWebview" />


<!--Lower Nav bar for the Browser Page not yet sure what to put there-->
    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:cardBackgroundColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--Put in Icons for Lower Navbar here-->

        </TableRow>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>